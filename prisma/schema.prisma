generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Services {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String[] // for Cloudinary
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Projects {
  id            Int       @id @default(autoincrement())
  title         String
  description   String
  imageUrl      String[]
  clientName    String
  category      String
  dateCompleted DateTime? @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
